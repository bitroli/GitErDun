<% content_for :header do -%>
  <%= stylesheet_link_tag 'user_landing' %>
  <%= javascript_include_tag 'user_landing' %>
<% end %>

<div id="container">
    <div class="hidden">
    <div id="sample-modal"><h2 style="font-size:160%; font-weight:bold; margin:10px 0;">Modal Box Content</h2><p>Place your desired modal box content here</p></div>
    </div><!-- end of hidden -->
    <%= render "user_landing/header", :focus => "tasks" %>
<div id="content">

      <%= render "user_landing/left_column" %>
    	<div id="mid-col" class="full-col">
		<%= 
		if params[:tasks]  == "new"
			case params[:view] 
			when "list" then render "new_list_view", :focus => "new"
			when "calendar" then "new_calendar"
			end	
		elsif params[:tasks]  == "old"
			case params[:view] 
			when "list" then render "old_list_view", :focus => "old"
			when "calendar" then "old_calendar"
			end
		else
			render "new_list_view"
		end		
		%>
     	</div>
      
      <span class="clearFix">&nbsp;</span>     

</div><!-- end of div#content -->
<div class="push"></div>
</div><!-- end of #container -->

